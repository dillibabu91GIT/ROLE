- name: ibps deploy warfileinstall in was
  hosts: '{{ target }}'
  become: yes
  become_user: itdevtra

  tasks:
    - name: Read configuration from config.yml
      include_vars:
        file: "{{ GITHUB_WORKSPACE }}/config.yml"
        name: config_vars

    - name: Include IBPS-warfileinstall
      include_role:
        name: IBPS-warfileinstall
        tasks_from: main
